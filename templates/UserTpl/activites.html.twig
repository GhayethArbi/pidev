{% extends 'UserTpl/baseU.html.twig' %}
{% block Userbody %}
	{% set idObjectif = idObj %}
	{% set data = data %}
	<!-- ============== S-OUR-PROGRAMS ============== -->
	<!-- ============== S-OUR-PROGRAMS ============== -->
		<section class="s-our-programs" style="background-image: url('{{ asset('/assetsU/img/bg-programs.jpg') }}');"> <div class="mask"></div>
		<div class="our-programs-effect" style="background-image: url('{{ asset('/assetsU/img/bg-programs.svg') }}');"></div>
		<div class="container">
			<h2 class="title-decor">Our
				<span>Activites</span>
			</h2>
			<p class="slogan">Please select at least one activity to create your objective.</p>
			<p <p class="slogan">if you wanna end it select this button <a href="{{ path('app_user')}}" class="btn" >End Objectif</a></p>
			<div class="row">
				{% for activite_physique in activites %}
					<div class="col-sm-6 col-md-3 program-col">
						<div class="program-item">
							<div class="program-item-front" style="background-image: url('{{ asset('Uploads/' ~ activite_physique.getImageActivite()) }}');">
								<div class="program-item-inner">
									<h3 style="color:#f23849;">{{activite_physique.getNomActivite()}}</h3>
								</div>
							</div>
							<div class="program-item-back" style="background-image: url('{{ asset('Uploads/' ~ activite_physique.getImageActivite()) }}');">
								<div
									class="program-item-inner">
									{#{ dump(data) }}
									                                    {{ dump(activite_physique.getId()) }#}
									<a href="{{ path('app_user_create_activite', { 'data': data, 'idObj': idObjectif, 'nomAct': activite_physique.getNomActivite() }) }}" class="btn">Add</a>
								</div>
							</div>
						</div>
					</div>
				{% endfor %}
			</div>
		</div>
	</section>
{% endblock %}
