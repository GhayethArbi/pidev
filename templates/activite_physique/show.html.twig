    {%endif%}
    {% endfor %}
    <section class="section">
      <div class="row">
  
  
        <div class="card">
          <div class="card-body">
            <h5 class="card-title">ActivitePhysique</h5>
 
    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ activite_physique.id }}</td>
            </tr>
            <tr>
                <th>Nom_Activite</th>
                <td>{{ activite_physique.NomActivite }}</td>
            </tr>
            <tr>
                <th>Type_Activite</th>
                <td>{{ activite_physique.TypeActivite }}</td>
            </tr>
            <tr>
                <th>Duree_Activite</th>
                <td>{{ activite_physique.DureeActivite }}</td>
            </tr>
            <tr>
                <th>Calories_Brules</th>
                <td>{{ activite_physique.CaloriesBrules }}</td>
            </tr>
            <tr>
                <th>Nb_Series</th>
                <td>{{ activite_physique.NbSeries }}</td>
            </tr>
            <tr>
                <th>Nb_Rep_Series</th>
