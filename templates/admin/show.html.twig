{% extends 'base.html.twig' %}

{% block title %}Recette{% endblock %}

{% block body %}
<main id="main" class="main">
<!-- Page Title -->
 <div class="pagetitle">
      <h1> Nutrition </h1>
      <nav>
        <ol class="breadcrumb">
          <li class="breadcrumb-item"><a href="index.html">Home</a></li>
          <li class="breadcrumb-item ">Module Nutrition</li> 
          <li class="breadcrumb-item active">Recettes</li>
        </ol>
      </nav>
    </div>
    <a href="{{ path('app_name_index') }}"><button class="btn btn-outline-dark"><i class="ri-arrow-left-fill"> &nbsp back to list</i></button></a>
  <!-- end Page Title -->

    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ recette.id }}</td>
            </tr>
            <tr>
                <th>Name</th>
                <td>{{ recette.name }}</td>
            </tr>
            <tr>
                <th>Category</th>
                <td>{{ recette.category }}</td>
            </tr>
            <tr>
                <th>Date</th>
                <td>{{ recette.date ? recette.date|date('Y-m-d') : '' }}</td>
            </tr>
            <tr>
                <th>Description</th>
                <td>{{ recette.description }}</td>
            </tr>
        </tbody>
    </table>

    <a href="{{ path('app_name_edit', {'id': recette.id}) }}"><button class="btn btn-dark"><i class="ri-edit-2-line">&nbsp Edit</i></button></a>
    <form method="post" action="{{ path('app_name_delete', {'id': recette.id}) }}" onsubmit="return confirm('Are you sure you want to delete this item?');">
    <input type="hidden" name="_token" value="{{ csrf_token('delete' ~ recette.id) }}">
    <button class="btn  bg-light text-dark"><i class="bi bi-trash">&nbsp Delete </i></button>
    </form>
</main>
{% endblock %}
