{% extends 'base.html.twig' %}
{% block title %}
Activitee physique
{% endblock %}
{% block body%}
<main id="main" class="main">

    <div class="pagetitle">
      <h1>Users Tables</h1>
      <nav>
        <ol class="breadcrumb">
          <li class="breadcrumb-item"><a href="{{path('app_dashbord')}}">Home</a></li>
          <li class="breadcrumb-item">Users</li>
  
        </ol>
      </nav>
    </div><!-- End Page Title -->
    {% for message in app.flashes('notice') %}
    {%if message=="Your changes were not saved. Please check your current password and try again."%}
    <div class="alert alert-danger">
      {{ message }}
    </div>
    {% else%}
    <div class="alert alert-success">
      {{ message }}
    </div>
    {%endif%}
    {% endfor %}
    <section class="section">
      <div class="row">
  
  
        <div class="card">
          <div class="card-body">
            <h5 class="card-title">Objectif</h5>


    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ objectif.id }}</td>
            </tr>
            <tr>
                <th>Nom_Objectif</th>
                <td>{{ objectif.NomObjectif }}</td>
            </tr>
            <tr>
                <th>Date_Objectif</th>
                <td>{{ objectif.DateObjectif ? objectif.DateObjectif|date('Y-m-d H:i:s') : '' }}</td>
            </tr>
            <tr>
                <th>Total_Calories</th>
                <td>{{ objectif.TotalCalories }}</td>
            </tr>
            <tr>
                <th>Total_Duree</th>
                <td>{{ objectif.TotalDuree }}</td>
            </tr>
            <tr>
                <th>Note</th>
                <td>{{ objectif.Note }}</td>
            </tr>
            <tr>
                <th>Activites Associées</th>
                <td>
                    {% for activite_physique in objectif.activites %}
                        {{ activite_physique.id }} - {{ activite_physique.NomActivite }}
                        {# Afficher d'autres propriétés de l'entité activite_physique si nécessaire #}
                        <br>
                    {% endfor %}
                </td>
            </tr>
        </tbody>
    </table>

    <a href="{{ path('app_objectif_index') }}"  class="btn btn-outline-secondary">back to list</a>

    <a href="{{ path('app_objectif_edit', {'id': objectif.id}) }}" class="btn btn-outline-warning">edit</a>

    {{ include('objectif/_delete_form.html.twig') }}
{% endblock %}
