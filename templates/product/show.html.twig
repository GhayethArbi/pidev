{% extends 'base.html.twig' %}

{% block title %}Product{% endblock %}

{% block body %}
    <style>

        .qr-container {
            max-width: 300px;
            margin: 0 auto;
            padding: 20px;
            background-color: #fff;
            border-radius: 10px;
            box-shadow: 0 0 10px rgba(0, 0, 0, 0.1);
        }
        .qr-code {
            display: block;
            margin: 0 auto;
            width: 200px;
            height: 200px;
        }
    </style>
    <h1>Product</h1>

    <a href="{{ path('app_product_index') }}" class="btn btn-warning">
        <i class="bi bi-arrow-left"></i> Back to List
    </a>
    <table class="table">
        <tbody>
        <tr>
            <th>Id</th>
            <td>{{ product.id }}</td>
        </tr>
        <tr>
            <th>Name</th>
            <td>{{ product.name }}</td>
        </tr>
        <tr>
            <th>Slug</th>
            <td>{{ product.slug }}</td>
        </tr>
        <tr>
            <th>Illustration</th>
            <td><img src="{{ asset('Uploads/' ~ product.illustration)}}" alt="Illustration" style="width:100px"></td>
        </tr>
        <tr>
            <th>Subtitle</th>
            <td>{{ product.subtitle }}</td>
        </tr>
        <tr>
            <th>Description</th>
            <td>{{ product.description }}</td>
        </tr>
        <tr>
            <th>Price</th>
            <td>{{ product.price }}</td>
        </tr>
        </tbody>
    </table>

    <div class="text-center">


        <a href="{{ path('app_product_edit', {'id': product.id}) }}" class="btn btn-primary">
            <i class="bi bi-pencil-square"></i> Edit
        </a>

        <a href="{{ path('app_product_delete',{'id':product.id}) }}" class="btn btn-danger">
            <i class="bi bi-trash"></i> Delete
        </a>
    </div>
    <h1>QR CODE</h1>
    <div class="qr-container">
        <img class="qr-code" src="{{ path('generate_qr_code', {'productName': product.name, 'productCategory': product.category, 'productPrice': product.price, 'productSubtitle': product.subtitle}) }}" alt="QR Code">
    </div>
{% endblock %}
