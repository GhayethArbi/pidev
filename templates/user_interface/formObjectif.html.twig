{% block content %}
    <section class="s-contacts" style="background-image: url('{{ asset('assets_user/img/bg-contacts.svg') }}');">
    <div class="container">
        <h2 class="title-decor" style='color:white'>Create <span>Your Objective</span></h2>
        <p class="slogan">Please select at least one activity to create your objective.</p> <!-- Updated slogan -->
        <div class="row">
            <div class="col-md-7 col-lg-8">
                {{ form_start(form, {'attr': {'novalidate': 'novalidate', 'id': 'contactform'}}) }}
                    <ul class="form-cover">
                        <li class="inp-name">
                           {{ form_row(form.NomObjectif, {'attr': { 'disabled': 'disabled', 'style': 'display: none'}, 'label': false }) }}
                        </li>
                        <li class="inp-email">
                            {{ form_row(form.Date_objectif, {'attr': {'placeholder': 'Date de l\'objectif'}}) }}
                        </li>
                        <li class="inp-text">
                            {{ form_row(form.note, {'attr': { 'placeholder': 'Note'}}) }}
                        </li>
                        <li class="inp-text">
                            {{ form_row(form.total_duree, {'attr': { 'placeholder': 'Total de dur√©e', 'style': 'display: none'},'label':false}) }}
                        </li>
                        <li class="inp-text">
                            {{ form_row(form.total_calories, {'attr': { 'placeholder': 'Total de calories', 'style': 'display: none'},'label':false}) }}
                        </li>
                   </ul>
                    <div class="btn-form-cover">
                        <button id="#submit" type="submit" class="btn">Save</button>
                    </div>    
                {{ form_end(form) }}
                <div id="message"></div>
            </div>
        </div>
    </div>
</section>
